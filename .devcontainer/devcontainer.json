{
    "name": "Neural Sequence Decoder Dev",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": ".."
    },
    "mounts": [
        "source=${localWorkspaceFolder},target=/code,type=bind",
        "source=${localEnv:HOME}/.gitconfig,target=/root/.gitconfig,type=bind,consistency=cached",
        "source=${localEnv:HOME}/.ssh,target=/root/.ssh,type=bind,consistency=cached"
    ],
    "runArgs": [
        "--gpus=all",
        "--shm-size=8g"
    ],
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "workspaceFolder": "/code",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.pylint",
                "ms-python.black-formatter",
                "ms-toolsai.jupyter",
                "augment.vscode-augment",
                "github.vscode-pull-request-github"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/opt/conda/bin/python",
                "python.terminal.activateEnvironment": false,
                "python.formatting.provider": "black",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true
            }
        }
    },
    "forwardPorts": [8888, 6006],
    "postCreateCommand": "chmod 700 /root/.ssh && chmod 600 /root/.ssh/* 2>/dev/null || true && echo 'Dev container ready! GPU:' && python -c 'import torch; print(torch.cuda.is_available())'",
    "remoteUser": "root"
}
